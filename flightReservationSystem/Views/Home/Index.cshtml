<section class="banner" id="top">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="left-side">
                    <div class="logo">
                        <img src="img/logo.png" alt="Flight Template">
                    </div>
                    <div class="page-direction-button">
                        <a href="/Home/UserLogin" style=" border-bottom-left-radius: 5px; border-bottom-right-radius: 5px;"></i>Giriş Yapın</a>
                    </div>

                    @if (@Session["UserId"]!=null)
                    {
                        <div class="page-direction-button">
                            <a href="/Home/GetUserBookings/?userId=@Session["UserId"]" style=" border-bottom-left-radius: 5px; border-bottom-right-radius: 5px;" >
                                Biletlerim
                                </a>
                        </div>
                    }




                    <div class="tabs-content">

                        <ul class="social-links">
                            <li><a href="http://facebook.com">Bizi <em>Facebook</em> tan bulun<i class="fa fa-facebook"></i></a></li>
                            <li><a href="http://youtube.com"> <em>YouTube</em> Kanalımız<i class="fa fa-youtube"></i></a></li>
                            <li><a href="http://instagram.com">Bizi <em>instagram</em> dan takip edin<i class="fa fa-instagram"></i></a></li>
                        </ul>
                    </div>
                    <div class="page-direction-button">
                        <a href="/Home/Contact"><i class="fa fa-phone"></i>İletişime Geçin</a>
                    </div>
                </div>
                </div>
            <div class="col-md-5 col-md-offset-1">
                <section id="first-tab-group" class="tabgroup">
                    <div id="tab1">
                        <div class="submit-form">
                            <h4>Uçuşunuzu <em>seçin</em>:</h4>
                            <form id="form-submit" action="/Home/SearchFlight" method="post">
                                <div class="row">
                                    <div class="col-md-6">
                                        <fieldset>
                                            <label for="from">Nereden:</label>
                                            <select required name='DepartureCityID' onchange='this.form.()'>
                                                <option value="">Select a location...</option>
                                                @foreach (var item in ViewBag.cities)
                                                {
                                                    <option value="@item.CityID">@item.CityName</option>
                                                }

                                            </select>
                                        </fieldset>
                                    </div>
                                    <div class="col-md-6">
                                        <fieldset>
                                            <label for="to">Nereye:</label>
                                            <select required name='ArrivalCityID' onchange='this.form.()'>
                                                <option value="">Select a location...</option>
                                                @foreach (var item in ViewBag.cities)
                                                {
                                                    <option value="@item.CityID">@item.CityName</option>
                                                }
                                            </select>
                                        </fieldset>
                                    </div>
                                    <div class="col-md-6">
                                        <fieldset>
                                            <label for="departure">Tarih:</label>
                                            <input name="DepartureDateTime" type="text" class="form-control date" id="deparure" placeholder="Tarih Seçin..." required onchange='this.form.()'>
                                        </fieldset>
                                    </div>
                                 
                                 
                                    <div class="col-md-6">
                                        <fieldset>
                                            <button type="submit" id="form-submit" class="btn">Bilet Al</button>
                                        </fieldset>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>



