@using flightReservationSystem.Model
@model IEnumerable<Flight>
@{
    ViewBag.Title = "SearchFlight";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="main-content" style="min-height:400px">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">

                    <h3 class="title-5 m-b-35">Uçuşlar</h3>

                    <div class="table-responsive table-responsive-data2">
                        <table class="table table-data2">
                            <thead>
                                <tr>
                                    <th>Sıra Numarası</th>
                                    <th>Uçuş Numarası</th>
                                    <th>Kalkış Şehri</th>
                                    <th>Varış Şehri</th>
                                    <th>Kalkış zamanı</th>
                                    <th>Varış Zamanı</th>
                                    <th>Yolcu Kapasitesi</th>
                                    <th>Ücreti</th>
                                    <th>Bilet Seç</th>
                                </tr>
                            </thead>
                            @{int i = 1;}
                            @foreach (var item in Model)
                            {
                                <tbody>
                                    <tr class="tr-shadow">
                                        <td>@i</td>
                                        <td>@item.FlightNumber</td>
                                        <td>
                                            @item.DepartureCity
                                        </td>
                                        <td class="desc">@item.ArrivalCity</td>
                                        <td>@item.DepartureDateTime</td>
                                        <td>
                                            @item.ArrivalDateTime
                                        </td>
                                        <td>@item.SeatCapacity</td>
                                        <td>@item.PricePerSeat</td>
                                        <td>
                                            <div class="table-data-feature">
                                                <a class="form-control btn-default" href="/Home/MakeBooking/?userId=@Session["UserId"]&flightId=@item.FlightID" data-placement="top">
                                                    Seç
                                                </a>

                                            </div>
                                        </td>
                                     
                                    </tr>
                                    <tr class="spacer"></tr>


                                </tbody>
                                i++;
                            }

                        </table>
                    </div>
                    <!-- END DATA TABLE -->
                </div>
            </div>


        </div>
    </div>
</div>



