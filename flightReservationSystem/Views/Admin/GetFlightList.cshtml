@using flightReservationSystem.Model
@model IEnumerable <FlightViewModel> 
@{
    ViewBag.Title = "GetFlightList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                   
                    <h3 class="title-5 m-b-35">Uçuşlar</h3>
                  
                    <div class="table-responsive table-responsive-data2">
                        <table class="table table-data2">
                            <thead>
                                <tr>

                                    <th>Uçuş Numarası</th>
                                    <th>Kalkış Şehri</th>
                                    <th>Varış Şehri</th>
                                    <th>Kalkış zamanı</th>
                                    <th>Varış Zamanı</th>
                                    <th>Yolcu Kapasitesi</th>
                                    <th>Ücreti</th>
                                    <th>Yolcu Yaş Ortalaması</th>
                                    <th>Toplam Tahsil Tutarı</th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tbody style="text-align:center">
                                    <tr class="tr-shadow">

                                        <td>@item.FlightNumber</td>
                                        <td class="desc">@item.ArrivalCity</td>
                                        <td>
                                            @item.DepartureCity
                                        </td>

                                        <td>@item.DepartureDateTime</td>
                                        <td>
                                            @item.ArrivalDateTime
                                        </td>
                                        <td>@item.SeatCapacity</td>
                                        <td>@item.PricePerSeat</td>
                                        <td>@item.AveragePassengerAge</td>
                                        <td>@item.TotalRevenue</td>
                                        <td>
                                            <div class="table-data-feature">

                                                <a class="item" href="/Admin/UpdateFlight/@item.FlightID" data-toggle="tooltip" data-placement="top" title="Edit">
                                                    <i class="zmdi zmdi-edit"></i>
                                                </a>


                                            </div>
                                        </td>
                                    </tr>
                                    <tr class="spacer"></tr>


                                </tbody>
                            }

                        </table>
                    </div>
                    <!-- END DATA TABLE -->
                </div>
            </div>

            
        </div>
    </div>
</div>


